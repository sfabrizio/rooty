{
  "name": "rooty",
  "version": "0.1.1",
  "description": "A Tiny user management system written in Vanilla.JS",
  "main": "index.js",
  "scripts": {
    "start": "watch-http-server",
    "preinstall": "npm i -g watch-http-server",
    "test": "echo 'not implemented yet'",
    "build": "NODE_ENV=production webpack && npm run sass",
    "sass": "npm run clean && node-sass --output-style compressed src/client/static/style/main.scss -o build/",
    "sass-watch": "node-sass -w --source-map-contents src/client/static/style/main.scss -o build/",
    "clean": "del build/main.css",
    "dev": "webpack --progress --colors --watch & watch-http-server -o & npm run sass-watch"
  },
  "engines": {
    "node": "6.3.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sfabrizio/rooty.git"
  },
  "keywords": [
    "Vanilla.js",
    "User",
    "Admin",
    "Groups"
  ],
  "author": "Samuel Fabrizio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sfabrizio/rooty/issues"
  },
  "homepage": "https://github.com/sfabrizio/rooty#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.1.1",
    "eslint-loader": "^1.4.1",
    "node-sass": "^3.8.0",
    "webpack": "^1.13.1"
  }
}
